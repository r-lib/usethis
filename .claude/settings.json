{
  "permissions": {
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(R:*)",
      "Bash(Rscript:*)",
      "Bash(rm:*)",
      "Bash(air:*)",
      "Edit(R/**)",
      "Edit(tests/**)",
      "Edit(vignettes/**)",
      "Edit(DESCRIPTION)",
      "Edit(_pkgdown.yml)",
      "Edit(NEWS.md)",
      "Edit(README.md)",
      "Edit(README.Rmd)",
      "WebFetch(github.com:*)"
